# Caddyfile para NipponFlex AI SaaS
# Reemplaza {$DOMAIN} con tu dominio real

{$DOMAIN} {
    reverse_proxy app:3000
}

evolution.{$DOMAIN} {
    reverse_proxy evolution-api:8080
}

n8n.{$DOMAIN} {
    reverse_proxy n8n:5678
}

qdrant.{$DOMAIN} {
    reverse_proxy qdrant:6333
}

chat.{$DOMAIN} {
    reverse_proxy chatwoot:3000
}
